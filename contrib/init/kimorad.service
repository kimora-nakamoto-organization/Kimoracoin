[Unit]
Description=Kimora's distributed currency daemon
After=network.target

[Service]
User=kimora
Group=kimora

Type=forking
PIDFile=/var/lib/kimorad/kimorad.pid
ExecStart=/usr/bin/kimorad -daemon -pid=/var/lib/kimorad/kimorad.pid \
-conf=/etc/kimora/kimora.conf -datadir=/var/lib/kimorad -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
